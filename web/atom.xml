{{:http type="application/atom+xml"}}
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/" xml:lang="fr">

	<link rel="self" href="{{$request_url}}" />
	<title type="html">{{$config.org_name|escape:'xml'}}</title>
	<link href="{{$root_url|escape:'xml'}}" rel="alternate" type="text/html" title="{{$config.org_name|escape:'xml'}}" />

	{{#articles order="published DESC" limit=1}}
	<updated>{{$published|atom_date}}</updated>
	{{/articles}}

	<author>
		<name>{{$config.org_name|escape:'xml'}}</name>
	</author>

	<id>{{$root_url|escape:'xml'}}</id>
	<generator uri="https://fossil.kd2.org/paheko/">Paheko</generator>

	{{#articles order="published DESC" limit=20}}
	<entry>
		<title>{{$title|remove_leading_number|escape:'xml'}}</title>
		<link href="{{$url|escape:'xml'}}" rel="alternate" type="text/html" title="{{$title|escape:'xml'}}" />
		<id>{{$url|escape:'xml'}}</id>
		<updated>{{$published|atom_date}}</updated>
		<author><name>{{$config.org_name|escape:'xml'}}</name></author>
		<content type="html">
			<![CDATA[
			{{$html|escape:'cdata'}}
			]]>
		</content>
	</entry>
	{{/articles}}

</feed>